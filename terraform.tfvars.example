# Example variable definitions file
# Copy this to `terraform.tfvars` and update the values before running Terraform.

region                 = "us-east-1"
backend_bucket         = "slowmoose-terraform-state-bucket"
backend_dynamodb_table = "slowmooose-terraform-locks"

# Provide your own SSH key pair and AMI ID
ec2_key_name           = "ec2-key-slowmoose"
ec2_ami_id             = "ami-024ee5112d03921e2" # Amazon Linux 2 for us-east-1

# Optionally override defaults
vpc_cidr_block         = "10.1.0.0/16"
public_subnet_cidrs    = ["10.1.1.0/24", "10.1.2.0/24"]
private_subnet_cidrs   = ["10.1.3.0/24", "10.1.4.0/24"]
cluster_name           = "my-eks-cluster"
eks_desired_capacity   = 2
eks_min_size           = 1
eks_max_size           = 3
eks_instance_type      = "t3.small"


